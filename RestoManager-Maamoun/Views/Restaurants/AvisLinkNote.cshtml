@model IEnumerable<RestoManager_Maamoun.Models.RestosModel.Restaurant>

@{
    ViewData["Title"] = "Index";
}

<h1>Only Restaurants with an average score equal to 3.5 or above will be listed here</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomResto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ville)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeProprio)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomResto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ville)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeProprio.Nom)
                </td>
               
            </tr>
        }
    </tbody>
</table>
